<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/checkboxTermsAndCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:onClick="onCheckBoxClick"
            android:text="I acknowledge that I have been advised about the Chronic Disease Management Benefit Program and have completely understood the terms of enrolment."/>
        <TextView
            android:id="@+id/termsNconditions"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text=" Read Terms and Conditions"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:textColor="#03A9F4"
            android:textSize="18sp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>